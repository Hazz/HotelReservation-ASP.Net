@model IEnumerable<HotelReservation.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SingleBeds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoubleBeds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarrif1Person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarrif2People)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TarrifExtraPerson)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SingleBeds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoubleBeds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarrif1Person)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarrif2People)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TarrifExtraPerson)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.RoomID }) |

